{
  "manifest_version": 3,
  "name": "Zillow FRBO Helper",
  "version": "1.0.0",
  "description": "Automate FRBO lead management on Zillow",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.zillow.com/*",
    "https://*.onrender.com/*"
  ],
  
  "background": {
    "service_worker": "bg.js"
  },
  
  "content_scripts": [{
    "matches": ["https://www.zillow.com/*"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zillow FRBO Helper"
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}


